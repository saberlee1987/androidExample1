<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        tools:context=".ProfileActivity">
    
    <TextView
            android:layout_width="189dp"
            android:layout_height="45dp" android:id="@+id/pageLabel"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" tools:text="Profile  Page"
            android:textSize="18sp" android:textColor="@color/black" android:padding="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextFirstName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageLabel" android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:hint="Enter FirstName"
            android:textColorHint="@color/gray"
            app:layout_constraintHorizontal_bias="0.502"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextLastName"
            android:textColor="@color/black"
            android:hint="Enter LastName"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.502"/>
    <Button
            android:text="confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_confirm"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLastName" android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:background="@color/btn_primary"
            app:layout_constraintHorizontal_bias="0.498"/>


</androidx.constraintlayout.widget.ConstraintLayout>